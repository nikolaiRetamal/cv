			  <div class="item"><img src="{{ asset('img/4.jpg') }}" alt="image"></div>
			</div>
			<div id="photos" class="owl-carousel owl-theme">
			  <div class="item"><img src="{{ asset('img/DSC_0063.png') }}" alt="image"></div>
			  <div class="item"><img src="{{ asset('img/DSC_0062.png') }}" alt="image"></div>
			</div>
		</section>
		<section id="contact">
			<h1>Me contacter</h1>
			
		</section>
        <footer>
        </footer>
{% endblock %}
